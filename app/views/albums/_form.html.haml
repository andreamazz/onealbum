= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
